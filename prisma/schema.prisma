generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // No pongas `url` aqu√≠, ahora va en prisma.config.ts
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tickets   Ticket[]
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

model Ticket {
  id          String   @id @default(cuid())
  title       String
  description String
  priority    Priority @default(MEDIUM)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}
  